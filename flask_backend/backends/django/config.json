{
    "requirements": [
        "final_steps"
    ],
    "base_image": "python:{{ version }}",
    "final_steps": [
        "FROM python:{{ version }}",
        "ENV PYTHONDONTWRITEBYTECODE 1",
        "ENV PYTHONUNBUFFERED 1",
        "WORKDIR /usr/src/app",
        "RUN apt-get update && apt-get -y install netcat gcc && apt-get clean",
        "COPY . .",
        "RUN pip install --no-cache-dir -r requirements.txt",
        "EXPOSE 8000",
        "{{#if frontend}}",
        "COPY --from={{ frontend.build_stage_name }} {{ frontend.output_directory }} /usr/src/app/public",
        "{{/if}}",
        "CMD [\"python\", \"manage.py\", \"runserver\", \"0.0.0.0:8000\"]"
    ],
    "defaults": {
        "version": "3.8",
        "expose_ports": [
            "8000"
        ],
        "manual_installer": "https://files.pythonhosted.org/packages/58/0b/8a4ab2c02982df4ed41e29f28f189459a7eba37899438e6bea7f39db793b/Django-5.1.4-py3-none-any.whl"
    }
}