{
    "requirements": ["final_steps"],
    "base_image": "ruby:{{ version }}",
    "final_steps": [
        "FROM ruby:{{ version }}",
        "WORKDIR /usr/src/app",
        "COPY Gemfile Gemfile.lock ./",
        "RUN bundle install",
        "COPY . .",
        "EXPOSE 3000",
        "{{#if frontend}}",
        "COPY --from={{ frontend.build_stage_name }} {{ frontend.output_directory }} /usr/src/app/public",
        "{{/if}}",
        "CMD [\"rails\", \"server\", \"-b\", \"0.0.0.0\"]"
    ],
    "defaults": {
        "version": "2.7",
        "expose_ports": ["3000"]
    }
}
