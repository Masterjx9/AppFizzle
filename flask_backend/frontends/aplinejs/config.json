{
    "requirements": ["build_steps"],
    "base_image": "node:latest",
    "build_steps": [
        "FROM node:{{ version }} AS aplinejs-build",
        "WORKDIR /usr/src/app",
        "COPY [\"{{ aplinejs_app_dir }}/package.json\", \"{{ aplinejs_app_dir }}/package-lock.json*\", \"./\"]",
        "RUN npm install",
        "COPY {{ aplinejs_app_dir }}/ .",
        "RUN npm run build"
    ],
    "output_directory": "/usr/src/app/dist/{{ aplinejs_output_dir }}",
    "build_stage_name": "aplinejs-build",
    "defaults": {
        "aplinejs_app_dir": "MyApllineJsApp",
        "aplinejs_output_dir": "MyApllineJsApp",
        "version": "latest"
    }
}